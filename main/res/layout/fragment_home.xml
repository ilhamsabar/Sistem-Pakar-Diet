<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="info.androidhive.materialdesign.activity.HomeFragment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="9dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Konsultasi Diet"
                android:gravity="center"
                android:id="@+id/coba"
                android:background="@color/colorPrimaryDark"
                android:textSize="20dp"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:src="@drawable/diet1" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Cari Tahu Diet Sehat Anda \n Karena Diet yang Baik Memperbaiki Metabolisme Tubuh"
                android:textSize="15dp"
                android:textStyle="italic"
                android:gravity="center"/>

        </LinearLayout>

        </android.support.v7.widget.CardView>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:gravity="center">
            <TextView
                android:text="Umur"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/umur"
                android:inputType="number" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:text="Berat Badan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/beratbadan"
                android:inputType="number" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:text="Tinggi Badan"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tinggibadan"
                android:inputType="number"
                android:keepScreenOn="false" />
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin" />
            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:keepScreenOn="false">
                <RadioButton
                    android:id="@+id/rblaki"
                    android:text="@string/jk_lk"
                    android:keepScreenOn="false" />
                <RadioButton
                    android:id="@+id/rbperempuan"
                    android:text="@string/jk_pr"
                    android:keepScreenOn="false"
                    android:checked="true"/>
            </RadioGroup>

        </TableRow>

        <TableRow
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golongan Darah"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"/>

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/golA"
                    android:text="@string/golA"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/golB"
                    android:text="@string/golB" />
                <RadioButton
                    android:id="@+id/golAB"
                    android:text="@string/golAB" />
                <RadioButton
                    android:id="@+id/golO"
                    android:text="@string/golO" />
            </RadioGroup>
        </TableRow>
        <TableRow
            android:gravity="center">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="Jenis Penyakit"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Maag"
                        android:id="@+id/PMaag"/>
                    <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Hipertensi"
                        android:id="@+id/PHipertensi"/>
                    <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Diabetes"
                        android:id="@+id/PDiabetes"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Asam Lambung"
                        android:id="@+id/PAsamurat"/>
                    <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Kolestrol"
                        android:id="@+id/PKolestrol"/>
                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Proses"
        android:layout_marginTop="10dp"
        style="@style/tombol"
        android:text="DIAGNOSA"/>
</LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>